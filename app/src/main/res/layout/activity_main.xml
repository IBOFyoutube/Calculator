<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    android:orientation="vertical"
    android:padding="13dp"
    tools:context=".MainActivity">


<ImageView
    android:id="@+id/showSignificant"
    android:layout_width="40sp"
    android:layout_height="40sp"
    android:src="@drawable/ic_visible"
    android:layout_gravity="top|left"
    tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/idTVSecondary"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingTop="30dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/green"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/idTVprimary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/idTVSecondary"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#fff"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />


        <LinearLayout
            android:id="@+id/significant_lyt1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/bsin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bcos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="tan"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/blog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="log"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bln"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="ln"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/significant_lyt2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:visibility="gone"

            >
            <Button
                android:id="@+id/bfact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="x!"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bsquare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="x²"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bsqrt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="√"
                android:textColor="#ffa500"
                android:textSize="25sp" />

            <Button
                android:id="@+id/binv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="1/x"
                android:textAllCaps="false"
                android:textColor="#ffa500"
                android:textSize="25sp" />


            <Button
                android:id="@+id/bpi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="π"
                android:textColor="#ffa500"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >

            <Button
                android:id="@+id/bac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:text="@string/ac"
                android:textColor="@color/yellow2"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="ObsoleteSdkInt,TouchTargetSizeCheck"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:text="@string/back_button"
                android:textColor="@color/yellow2"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bbrac1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:text="("
                android:textColor="#ffa500"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bbrac2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:text=")"
                android:textColor="#ffa500"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >
            <Button
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="7"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="8"
                android:textColor="#fff"
                android:textSize="25sp" />
            <Button
                android:id="@+id/b9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="9"
                android:textColor="#fff"
                android:textSize="25sp" />
            <Button
                android:id="@+id/bdiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="÷"
                android:textColor="#ffa500"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >
            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="4"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="5"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="6"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bmul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="×"
                android:textColor="#ffa500"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >
            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="1"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="2"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="3"
                android:textColor="#fff"
                android:textSize="25sp" />
            <Button
                android:id="@+id/bminus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="-"
                android:textColor="#ffa500"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >


            <Button
                android:id="@+id/b0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="0"
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bdot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="."
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bequal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="="
                android:textColor="#ffa500"
                android:textSize="25sp" />
            <Button
                android:id="@+id/bplus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="+"
                android:textColor="#ffa500"
                android:textSize="25sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>